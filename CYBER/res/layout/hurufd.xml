<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hurufc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/baca"
    android:orientation="vertical" >

         <ImageButton
            android:id="@+id/d"
            android:layout_width="480dp"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/d" 
            android:contentDescription="@drawable/d"/>

        <ImageButton
            android:id="@+id/arrowback"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/arrowback" 
            android:contentDescription="@drawable/arrowback"/>

        <ImageButton
            android:id="@+id/leftarrow"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/leftarrow"
            android:contentDescription="@drawable/leftarrow" />

        <ImageButton
            android:id="@+id/rightarrow"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/rightarrow"
            android:contentDescription="@drawable/rightarrow" />

</RelativeLayout>
